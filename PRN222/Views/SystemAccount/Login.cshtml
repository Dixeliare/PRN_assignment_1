@model PRN222.DAL.Models.SystemAccount

@{
    ViewData["Title"] = "Login";
}

<h2>Đăng nhập</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="AccountName">Tên đăng nhập</label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountPassword">Mật khẩu</label>
        <input asp-for="AccountPassword" type="password" class="form-control" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Đăng nhập vào hệ thống</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
