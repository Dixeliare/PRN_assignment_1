@model PRN222.DAL.Models.SystemAccount

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-warning text-dark text-center">
                    <h4>Edit Profile</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left Side: Profile Image (4/12) -->
                        <div class="col-md-4 text-center">
                            <img src="https://cdn.pixabay.com/photo/2020/07/01/12/58/icon-5359553_640.png"
                                 class="rounded-circle border img-fluid"
                                 alt="Profile Image" width="180" height="180">
                        </div>

                        <!-- Right Side: Edit Form (8/12) -->
                        <div class="col-md-8">
                            <form asp-action="SaveProfile" asp-controller="Staff" method="post">
                                <input type="hidden" asp-for="AccountId" />

                                <div class="mb-3">
                                    <label class="form-label">Account Name:</label>
                                    <input type="text" class="form-control" asp-for="AccountName" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Email:</label>
                                    <input type="email" class="form-control" asp-for="AccountEmail" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Role:</label>
                                    <input type="text" class="form-control"
                                           value="@(Model.AccountRole == 1 ? "Staff" : Model.AccountRole == 2 ? "Lecturer" : "User")"
                                           readonly>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-save"></i> Save Changes
                                    </button>
                                    <a asp-action="Profile" asp-controller="Staff" class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
