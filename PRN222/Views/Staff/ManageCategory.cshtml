@model List<PRN222.DAL.Models.Category>

@{
    ViewData["Title"] = "ManageCategory";
}

<h2>Quản lý danh mục</h2>

<div class="text-right mb-3">
    <a asp-controller="Staff" asp-action="CreateCategory" class="btn btn-primary">Tạo mới danh mục</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Danh mục cha</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDesciption</td>
                <td>@(category.ParentCategory != null ? category.ParentCategory.CategoryName : "None")</td>
                <td>@(category.IsActive.HasValue && category.IsActive.Value ? "Active" : "Inactive")</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-controller="Staff" asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-primary">Chỉnh sửa</a>
                        <a asp-controller="Staff" asp-action="DeleteCategory" asp-route-id="@category.CategoryId" class="btn btn-danger">Xóa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
