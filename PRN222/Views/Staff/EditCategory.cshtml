@model PRN222.DAL.Models.Category

@{
    ViewData["Title"] = "EditCategory";
}

<h2>Chỉnh sửa danh mục</h2>

<form asp-action="EditCategory" method="post">
    <div class="form-group">
        <label asp-for="CategoryId">Mã danh mục</label>
        <input asp-for="CategoryId" class="form-control" readonly="readonly" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryName">Tên danh mục</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!-- Lưu ý: Nếu property của bạn là CategoryDesciption, hãy sử dụng đúng tên -->
        <label asp-for="CategoryDesciption">Mô tả</label>
        <input asp-for="CategoryDesciption" class="form-control" />
        <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId">Danh mục cha</label>
        <input asp-for="ParentCategoryId" class="form-control" />
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive">Trạng thái</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true" selected="@(Model.IsActive.HasValue && Model.IsActive.Value ? "selected" : "")">Có thể xem</option>
            <option value="false" selected="@(Model.IsActive.HasValue && !Model.IsActive.Value ? "selected" : "")">Không thể xem</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

