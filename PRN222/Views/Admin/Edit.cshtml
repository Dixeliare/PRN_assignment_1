@model PRN222.DAL.Models.SystemAccount

<h2>Edit Account</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AccountId" />
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="AccountName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="AccountEmail" class="form-control" type="email" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="AccountRole" class="form-control">
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

